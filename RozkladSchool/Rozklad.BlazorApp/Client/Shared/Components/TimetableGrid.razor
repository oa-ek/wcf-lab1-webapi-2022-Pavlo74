    void GoToDetailsPage()
    {
        Navigation.NavigateTo($"/timetables/{Timetable.TimetableId}");
    }

    void GoToEditPage()
    {
        Navigation.NavigateTo($"/timetables/edit/{Timetable.TimetableId}");
    }

}
